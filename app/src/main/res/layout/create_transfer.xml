<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.pocketexpensemanager.HomeActivity">


    <EditText
        android:id="@+id/transfer_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Date of transfer..."
        android:inputType="date" />

    <LinearLayout
        android:id="@+id/spinners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@+id/transfer_date_text"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From Mode"/>
            <Spinner
                android:id="@+id/from_mode_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Mode"/>
            <Spinner
                android:id="@+id/to_mode_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/amount_text"
        android:layout_width="match_parent"
        android:minWidth="170dp"
        android:layout_height="wrap_content"
        android:hint="Transfer amount..."
        android:digits="123456789."
        android:layout_below="@+id/spinners"
        android:layout_marginTop="30dp"
        android:inputType="number"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_save_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:tint="@color/colorLight"
        android:layout_marginRight="@dimen/fab_margin"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="24dp"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/stat_sys_upload_done" />


</RelativeLayout>
