<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/expense_header"
        layout="@layout/summary_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expense_header" />

    <include
        android:id="@+id/table_head"
        layout="@layout/summary_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expense_header" />

    <ListView
        android:id="@+id/mop_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_head" />

</RelativeLayout>