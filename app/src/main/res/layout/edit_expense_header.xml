<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.project.pocketexpensemanager.HomeActivity">


    <TextView
        android:id="@+id/date_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/date_of_expense" />

    <EditText
        android:id="@+id/expense_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_below="@id/date_caption"
        android:inputType="none" />

    <TextView
        android:id="@+id/spinner_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expense_date_text"
        android:layout_marginTop="30dp"
        android:text="@string/category" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/spinner_caption" />


    <TextView
        android:id="@+id/description_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_spinner"
        android:layout_marginTop="30dp"
        android:text="@string/extra_description" />

    <EditText
        android:id="@+id/description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/description_caption"
        android:inputType="textMultiLine" />

</RelativeLayout>
