<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="start"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="@string/dummy_summary_title"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/expense_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/expense_total_caption"
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/total_expenses"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/rupee_symbol"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:contentDescription="@string/rupee_symbol"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/ic_rupee" />

        <TextView
            android:id="@+id/expense_total_text"
            android:layout_width="0dp"
            android:layout_weight="3.2"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/dummy_amt"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="italic" />
    </LinearLayout>

    <include
        android:id="@+id/table_head"
        layout="@layout/detailed_summary_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expense_header" />

    <ListView
        android:id="@+id/mop_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/table_head" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginTop="47dp"
        android:tint="@color/white"
        app:backgroundTint="@color/colorSecondaryDark"
        app:elevation="10dp"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_settings" />

</RelativeLayout>